<UserControl x:Class="FirstFloor.ModernUI.App.Pages.Introduction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel >
                <TextBlock Style="{StaticResource Heading1}" Margin="0,0,0,8" Text="周易"/>
                <mui:BBCodeBlock BBCode="[b]周易[/b], 乃中华文化之源。一阴一阳之谓道。易有太极，是生两仪，两仪生四象，四象生八卦，八卦定吉凶，吉凶生大业。八卦成列，象在其中矣。因而重之，爻在其中矣。刚柔相推，变在其中矣。" Margin="0,0,0,32" />
                <TextBlock Text="八卦" Style="{StaticResource Heading1}" />
                <mui:BBCodeBlock BBCode="古者包羲氏之王天下也，仰则观象於天，俯则观法於地，近取诸身，远取诸物，於是始作八卦。周文王在狱中七年，推演八卦，写下卦辞和爻辞。" Margin="0,0,0,32"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
